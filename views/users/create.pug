extends ../layouts/common
block content

	h1 Create User

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action='/user/create', method='POST')
		.form-group
			label(for='name') Name
			input#name.form-control(type='text', name='name', value=values ? values.name : '', required)
		.form-group
			label(for='phone') Phone
			input#phone.form-control(type='text', name='phone', value=values ? values.phone : '', required)
		button.btn.btn-primary Create